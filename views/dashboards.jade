extends layout

block content

  style(type="text/css").
    
    body{
      background: rgba(236, 239, 241, 0.31)
    }

    #logo{
      padding:5px 20px;
      border-radius:3px;
      color:white
    }

    #lista_prestacoes{
      font-size:14px;
      font-family: Calibri;
    }

    #lista_prestacoes tr:hover{
      cursor:pointer;
    }

    #div_menu_sidebar{
      width:18%;
      min-height:200px;
      float:left;
      border:1px solid;
      box-shadow:1px 1px 1px;
      border-radius:3px;
      background:rgba(74, 91, 185, 0.11);
      padding:7px;
    }

    #div_menu_sidebar a{
      display:block;
      text-decoration:none;
    }

    #div_menu_sidebar a:hover{
      cursor:pointer;
      border-bottom:1px solid;
      background:steelblue;
      color:white;
    }

    #div_container{
      width:80%;
      height:600px;
      float:right;
      overflow:auto;
    }

  
  script(type="text/javascript").
  
    $(document).ready(function(){

      Highcharts.chart('dashboard01', {
        chart: {
            type: 'areaspline'
        },
        title: {
            text: 'Consultas da semana'
        },
        legend: {
            layout: 'vertical',
            align: 'left',
            verticalAlign: 'top',
            x: 150,
            y: 100,
            floating: true,
            borderWidth: 1,
            backgroundColor: (Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'
        },
        xAxis: {
            categories: [
                'Segunda',
                'Terça',
                'Quarta',
                'Quinta',
                'Sexta',
                'Sabado',
                'Domingo'
            ],
            //- plotBands: [{ // visualize the weekend
            //-     from: 4.5,
            //-     to: 6.5,
            //-     color: 'rgba(68, 170, 213, .2)'
            //- }]
        },
        yAxis: {
            title: {
                text: 'Total de Consultas'
            }
        },
        tooltip: {
            shared: true,
            valueSuffix: ' units'
        },
        credits: {
            enabled: false
        },
        plotOptions: {
            areaspline: {
                fillOpacity: 0.5
            }
        },
        series: [{
            name: 'Total de Consultas por dia',
            data: [3, 4, 3, 20, 15, 3, 1]
        }]
      })

      Highcharts.chart('dashboard02', {
        chart: {
            type: 'column'
        },
        title: {
            text: 'Comparativo entre consultas realizadas e desistências'
        },
        xAxis: {
            categories: [
                'Segunda',
                'Terça',
                'Quarta',
                'Quinta',
                'Sexta',
                'Sabado',
                'Domingo'
            ],
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Consultas Realizadas',
            data: [5, 3, 4, 7, 2]
        }, {
            name: 'Desistências',
            data: [2, -2, -3, 2, 1]
        }]
    	});

    })

  div(id='app')
    div(id='div_menu_sidebar')
      a(href='contratos') Consultas Previstas
      a(href='dashboards') Dashboards
    div(id='div_container')
      div(id="dashboard01" style="min-width: 310px; height: 350px; margin: 0 auto")
      hr
      div(id="dashboard02" style="min-width: 310px; height: 350px; margin: 0 auto")
